---
import { siteConfig } from "../config/site-config";
import BlogPost from "../components/BlogPost.astro";
import MainLayout from "../layouts/MainLayout.astro";
import type { ACTION_ERROR_CODES } from "astro:actions";

// Astro.glob()
// const matches = import.meta.glob("./posts/*.md", { eager: true }); 
// const posts = Object.values(matches) as any[]; 

const posts = Object.values(import.meta.glob('./posts-old/*{.md,.mdx}', { eager: true }));
---

<MainLayout title="Blog de Erick">
    <!-- component -->
    <section class="bg-gray-900">
        <div class="container px-6 py-10 mx-auto">
            <h1
                class="text-3xl font-semibold capitalize lg:text-4xl text-white"
            >
                {siteConfig.title}
            </h1>

            <div class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2">
                {
                    posts.map((post) => (
                        <BlogPost {...post} />
                    ))
                }
            </div>
        </div>
    </section>
</MainLayout>
